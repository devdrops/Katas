<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="vendor.form.product_type" class="Vendor\ShopBundle\Form\ProductType">
            <tag name="form.type" alias="product" />
        </service>

        <service id="vendor.uploader" class="Vendor\ShopBundle\Services\Uploader">
            <argument type="service" id="filesystem" />
            <!-- <argument /> vendor_shop.upload_path parameter in config.yml, set in VendorShopExtension -->
        </service>
    </services>
</container>
