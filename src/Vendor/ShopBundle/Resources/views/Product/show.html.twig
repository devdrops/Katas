{% extends "::base.html.twig" %}

{% block body %}
<h1>Product: {{ product.name }}</h1>

<table>
    <tr>
      <td>Price</td>
      <td>Description</td>
    </tr>
    <tr>
        <td>{{ product.price }}</td>
        <td>
            <a href="{{ upload_path }}{{ product.document }}">{{ product.document }}</a>
        </td>
    </tr>
</table>
{% endblock body %}
